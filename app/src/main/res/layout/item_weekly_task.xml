<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemWeeklyTaskRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Görev Başlığı -->
    <TextView
        android:id="@+id/textViewTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_title"
        android:textSize="20sp"
        android:textColor="@color/primary"
        android:ellipsize="end"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Pazartesi - Pazar arası 7 gün için 7 kare -->
        <ImageView
            android:id="@+id/imageViewMonday"
            style="@style/WeeklyTaskDayIcon"
            android:layout_weight="1"
            app:tint="?attr/colorOnSurface" />

        <ImageView
            android:id="@+id/imageViewTuesday"
            style="@style/WeeklyTaskDayIcon"
            android:layout_weight="1"
            app:tint="?attr/colorOnSurface"/>

        <ImageView
            android:id="@+id/imageViewWednesday"
            style="@style/WeeklyTaskDayIcon"
            android:layout_weight="1"
            app:tint="?attr/colorOnSurface"/>

        <ImageView
            android:id="@+id/imageViewThursday"
            style="@style/WeeklyTaskDayIcon"
            android:layout_weight="1"
            app:tint="?attr/colorOnSurface"/>

        <ImageView
            android:id="@+id/imageViewFriday"
            style="@style/WeeklyTaskDayIcon"
            android:layout_weight="1"
            app:tint="?attr/colorOnSurface"/>

        <ImageView
            android:id="@+id/imageViewSaturday"
            style="@style/WeeklyTaskDayIcon"
            android:layout_weight="1"
            app:tint="?attr/colorOnSurface"/>

        <ImageView
            android:id="@+id/imageViewSunday"
            style="@style/WeeklyTaskDayIcon"
            android:layout_weight="1"
            app:tint="?attr/colorOnSurface"/>


    </LinearLayout>

</LinearLayout>
